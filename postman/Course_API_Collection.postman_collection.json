			"name": "Course Management (Teacher)",
			"item": [
				{
					"name": "Create Course",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{teacherToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Business English Mastery\",\n  \"description\": \"A comprehensive course designed to improve your business English skills, including presentations, meetings, and professional communication.\",\n  \"duration\": 60,\n  \"totalLessons\": 10,\n  \"price\": 1500000,\n  \"level\": \"INTERMEDIATE\",\n  \"isActive\": true\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/courses",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"courses"
							]
						},
						"description": "Create a new course. Only approved teachers can create courses."
					}
				},
				{
					"name": "Get My Courses",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{teacherToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/courses/my-courses?page=1&limit=10&sortBy=createdAt&sortOrder=desc",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"courses",
								"my-courses"
							],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								},
								{
									"key": "sortBy",
									"value": "createdAt"
								},
								{
									"key": "sortOrder",
									"value": "desc"
								}
							]
						},
						"description": "Get courses created by the authenticated teacher"
					}
				},
				{
					"name": "Update Course",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{teacherToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Advanced Business English\",\n  \"description\": \"Updated description for advanced business English course\",\n  \"price\": 1800000,\n  \"isActive\": true\n}"
						},
