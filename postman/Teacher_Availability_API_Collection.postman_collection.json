  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set current date for testing",
          "const now = new Date();",
          "const today = now.toISOString().split('T')[0];",
          "const nextWeek = new Date(now.getTime() + 7 * 24 * 60 * 60 * 1000).toISOString().split('T')[0];",
          "",
          "pm.collectionVariables.set('today', today);",
          "pm.collectionVariables.set('next_week', nextWeek);",
          "",
          "// Generate test teacher ID if not set",
          "if (!pm.collectionVariables.get('teacher_id')) {",
          "  pm.collectionVariables.set('teacher_id', 'test_teacher_' + Math.random().toString(36).substr(2, 9));",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Basic response validation",
          "pm.test('Status code is successful', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
          "});",
          "",
          "// Extract and store IDs from response for chaining requests",
          "if (pm.response.json && pm.response.json()) {",
          "    const responseJson = pm.response.json();",
          "    ",
          "    // Store availability ID if present",
          "    if (responseJson.id && pm.request.url.toString().includes('availability')) {",
          "        pm.collectionVariables.set('availability_id', responseJson.id);",
          "    }",
          "    ",
          "    // Store teacher ID if present",
          "    if (responseJson.teacherId) {",
          "        pm.collectionVariables.set('teacher_id', responseJson.teacherId);",
          "    }",
          "}"
        ]
      }
    }
  ]
